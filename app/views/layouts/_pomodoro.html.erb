
<div class="container">
  <div class="row">
    <div class="pomodoro">
      <div class="timer-title">
      </div>
      <div class="timer">
        <h2><span id="minutes">00</span>:<span id="seconds">00</span></h2>
      </div>
      <div class="options">
      <script>
        var timer = new Clock();
      </script>
        <button type="button" id="button_play" class="btn btn-primary" onclick='timer.start()'>
          Start Task
        </button>
        <button type="button" id="button_stop" class="btn btn-primary" onclick='timer.pause()'>
          Pause Task
        </button>
      </div>
    </div>
  </div>
</div>
