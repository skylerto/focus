<!-- Pomodoro display -->
<% task = @task ? @task : @sub_task %>
<div class="row">
  <div class="col-md-6 task_progress">
    <div class="progression">
      <%= task.progress || 0  %>
    </div>
    <div>Current Pomodoros</div>
  </div>
  <div class="col-md-6 estimated_progress">
    <div class="stay"><%= task.estimated_progress %></div>
    <div>Estimate Pomodoros</div>
  </div>
</div>
