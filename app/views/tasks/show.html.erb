<div class="row">
  <p id="notice"><%= notice %></p>
  <% if @task.complete %>
    <h3 class="task_completed">
      Task <%= @task.title %> Completed!
    </h3>
  <% end %>


  <%= content_tag "div", id: "task", data: {task: @task, url: '/tasks'} do %>

    <%= link_to 'Edit', edit_task_path(@task) %>
    <%= render 'layouts/pomodoro' %>
    <!-- -->
      <div class="row">
        <div class="col-md-6 task_progress">
          <div class="progression"><%= @task.progress || 0 %></div>
          <div>Current Pomodoros</div>
        </div>
        <div class="col-md-6 estimated_progress">
          <div class="stay"><%= @task.estimated_progress %></div>
          <div>Estimate Pomodoros</div>
        </div>
      </div>

      <h2><%= @task.title %></h2>

      <div class="complete">
        <%= @task.complete %>
      </div>

      <% end %>


<%= link_to 'Back', tasks_path %>



</div>

<!-- add a new sub task -->
<div class="row">
 <h4>New Subtask</h4>
    <%= form_for([@task, @task.sub_tasks.build]) do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :progress %><br>
    <%= f.number_field :progress %>
  </div>
  <div class="field">
    <%= f.label :estimated_progress %><br>
    <%= f.number_field :estimated_progress %>
  </div>
  <div class="field">
    <%= f.label :complete %><br>
    <%= f.check_box :complete %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
    <% end %>

  </div>

</div>

